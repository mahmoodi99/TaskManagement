@page "/DeleteRole/{Id}"
@using Share.Dto;

<h2>حذف سمت</h2>
@if (Role != null)
{
    <p>آیا از حذف این سمت مطمعن هستید؟ <b>@Role.Title</b></p>
    <div class="row">
        <table class="table">
            <tr>
                <td>عنوان</td>
                <td>@Role.Title</td>               
            </tr>
        </table>
    </div>
}
<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <input type="button" class="btn btn-success" @onclick="@(() => Delete(Role.Id))" value="حذف" />
            <input type="button" class="btn btn-danger" @onclick="@Cancel" value="انصراف" />
        </div>
    </div>
</div>
