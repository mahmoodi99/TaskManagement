@page "/RoleList"
@*@attribute [Authorize]*@

<span class="border-lable-right">
    <div class="card-header">
        <fieldset>
            <td class="align-middle">
                <a href="/AddRole" class="btn btn-success"> سمت جدید</a>
            </td>
        </fieldset>
    </div>
</span>
@if (Roles.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">عنوان</th>
                <th scope="col">ویرایش</th>
                <th scope="col">حذف</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Roles)
            {
                <tr>
                    <td class="align-middle">
                        @role.Title
                    </td>
                    <td class="align-middle">
                        <a href="@($"UpdateRole/{role.Id}")" class="btn btn-info">ویرایش</a>
                    </td>
                    <td class="align-middle">
                        <a href="/DeleteRole/@role.Id" class="btn btn-danger">حذف</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <span>
        در حال بارگزاری...
    </span>
}

